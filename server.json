{
    "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
    "name": "io.github.cognitivemyriad/verified-repo-memory",
    "title": "Verified Repo Memory",
    "description": "Stale-proof repository memory with citations + just-in-time verification + TTL (repo-scoped).",
    "repository": {
        "type": "git",
        "url": "https://github.com/cognitivemyriad/mcp-verified-repo-memory",
        "source": "github"
    },
    "version": "0.1.2",
    "packages": [
        {
            "registryType": "npm",
            "identifier": "@cognitivemyriad/vrm-local",
            "version": "0.1.2",
            "transport": {
                "type": "stdio"
            },
            "environmentVariables": [
                {
                    "name": "VRM_TTL_DAYS",
                    "description": "Default TTL in days (1-365).",
                    "isRequired": false,
                    "format": "number",
                    "isSecret": false
                },
                {
                    "name": "VRM_DATA_DIR",
                    "description": "Override data dir path.",
                    "isRequired": false,
                    "format": "string",
                    "isSecret": false
                },
                {
                    "name": "VRM_MAX_FILE_BYTES",
                    "description": "Max file parsing size bytes.",
                    "isRequired": false,
                    "format": "number",
                    "isSecret": false
                },
                {
                    "name": "VRM_SECRET_SCAN",
                    "description": "Enable secret scan (on/off).",
                    "isRequired": false,
                    "format": "string",
                    "isSecret": false
                }
            ]
        }
    ]
}